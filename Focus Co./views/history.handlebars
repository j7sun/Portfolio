<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>History</title>
    <link rel="stylesheet" href="/css/history.css">
</head>

<body>
    <div class="screen">
        <div class="title">
            <h1>History</h1>
            <a href="/main"><img id="back" src="/icon/back.png" alt=""></a>

            <section class="switch">
                <button id="btn-day" onclick="showDay()">Day</button>
                <button id="btn-week" onclick="showWeek()">Week</button>
                <button id="btn-month" onclick="showMonth()">Month</button>
            </section>

            <img class="graph" src="/icon/day.png"/>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        function showDay() {
            $(".graph").attr("src", "/icon/day.png");
        }
        function showWeek() {
            $(".graph").attr("src", "/icon/chart.png");
        }
        function showMonth() {
            $(".graph").attr("src", "/icon/month.png");
        }
    </script>

</body>

</html>