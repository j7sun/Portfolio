<html>

<head>
    <link rel="stylesheet" href="/css/countdown.css">

</head>

<body>
    <div class="screen">
        <div id="tasks">
            {{#each task.tasks}}
            <p id="taskList"><input type="checkbox">{{this}}</p>
            {{/each}}
        </div>
        <div class="clock">
            <svg width="240" height="240">
                <circle class="circle" stroke-linecap="round" cx="50%" cy="50%" r="45%" stroke="green" stroke-width="18"
                    fill="none" />
            </svg>
            <div class="time-display">
                <span id="h">{{task.hour}}</span>
                <span>:</span>
                <span id="m">{{task.min}}</span>
                <span>:</span>
                <span id="s">00</span>
            </div>
        </div>
        <div class="ticket-area">
            <div class="ticket-display">
                <img id="ticket" src="/icon/ticket.png" alt="">
                <div id="ticket-val">{{task.ticket_val}} mins</div>
            </div>
            <div><img id="mult" src="icon/mult.png" alt=""></div>
            <div id="ticket-num">{{task.ticket_num}}</div>
        </div>
        <button id="break">Enter Break</button>
        <button id="quit">Quit</button>

        <div class="modal" id="warning">
            <h3 style="padding:5px">Are you sure you want to quit now?</h3>
            <p style="padding:5px">You will receive 50% credits penalty for quitting early</p>
            <a href="/main"><button id="btn-yes">Yes</button></a>
            <button id="btn-no">No</button>
        </div>

        <div class="modal" id="rest">
            <h2>Your break will end in</h2>
            <h1>{{task.ticket_val}} mins</h1>
            <button id="continue">Go back to work</button>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/js/focus.js"></script>
</body>

</html>