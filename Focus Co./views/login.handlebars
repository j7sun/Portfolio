<html>

<head>
	<title>Login Page</title>
	<link rel="stylesheet" href="/css/login.css">
	<script src="/js/login.js"></script>
</head>

<body>
	<div class="screen">
		<h1>Log In</h1>
		<img src="/icon/focus.png">

		<div id="login-error-msg-holder">
			{{#unless loggedIn}}
			<p id="login-error-msg">Invalid username and/or password</p>
			{{/unless}}
		</div>

		<div class="textboxs">
			<form id="login-form" action="/main" method="POST">

				<input type="text" name="username" id="username-field" class="login-form-field"
					placeholder="Enter Username">
				<input type="password" name="password" id="password-field" class="login-form-field"
					placeholder="Enter Password">
				<p><input type="submit" value="Login" id="login-form-submit"></p>

			</form>
		</div>
	</div>
</body>

</html>